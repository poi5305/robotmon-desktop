{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "allowJs": true,
    "lib": ["dom", "es6"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "paths": {
      "*": ["./@types/*"]
    },
    "noUnusedLocals": false,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode-test"]
}
